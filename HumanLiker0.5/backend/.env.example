DEFAULT_MODEL=local
OLLAMA_BASE_URL=http://localhost:11434
LM_STUDIO_BASE_URL=http://localhost:1234

# API Keys (optional, for cloud models)
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
